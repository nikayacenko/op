

#include <iostream>
using namespace std;

double eps = 0.2;
double delta = 0.5;
double a = -4;
double b = 6;
double f(double x) {
    return 3*x * x - x + 4;
}
int main()
{
    setlocale(LC_ALL, "Ru");
    int k=0;
    double L;
    do {
        k++;
        double y = (a + b - eps) / 2;
        double z = (a + b + eps) / 2;
        if (f(y) < f(z)) {
            b = z;
        }
        else {
            a = y;
        }
        L = abs(b - a);
        cout << f(y) << " " << f(z) << endl;
    } while (L>delta);
    cout << "количество итераций: "<<k;
}
